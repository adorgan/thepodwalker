<%- include ('partials/header') %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/episodes/<%=blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="blog[image]"value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Playlist URL</label>
            <input type="text" name="blog[playlist]"value="<%= blog.playlist %>">
        </div>
        <div class="field">
            <label>Post Body</label>
            <textarea name="blog[body]" id="" cols="30" rows="10"><%= blog.body %></textarea>

            </textarea>
        </div>
        
        <input class="ui violet big basic button" type="submit">
    </form>
</div>

<%- include ('partials/footer') %>