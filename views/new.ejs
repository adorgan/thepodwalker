<!DOCTYPE html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>The Pod Walker</title>
    <meta name="description" content="Admin Edit Page">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="/images/favicon.ico" type="image/png">
    <link
        href="https://fonts.googleapis.com/css?family=Oxygen:400,700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet"
        href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
        crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/cd776babcb.js"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
</head>

<body>
<!-- new episode form -->
    <div class="container">
        <div class="row">
            <div class="col-12 d-flex justify-content-center pt-3">
                <h2>Add Blog Post</h2>
            </div>
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <form autocomplete=off action="/admin/episodes/new"
                    method="POST">
                    <div class="form-group">
                        <label>Episode Number</label>
                        <input type="text" class="form-control"
                            name="blog[episodeNum]">
                    </div>
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" class="form-control"
                            name="blog[title]">
                    </div>
                    <div class="form-group">
                        <label>Image URL</label>
                        <input type="text" class="form-control"
                            name="blog[image]">
                    </div>
                    <!-- <div class="form-group">
                        <label>Image URL 2</label>
                        <input type="text" class="form-control"
                            name="blog[image]">
                    </div>
                    <div class="form-group">
                        <label>Image URL 3</label>
                        <input type="text" class="form-control"
                            name="blog[image]">
                    </div> -->
                    <div class="form-group">
                        <label>Playlist URL</label>
                        <input type="text" class="form-control"
                            name="blog[playlist]">
                    </div>
                    <div class="form-group">
                        <label>Post Body</label>
                        <textarea name="blog[body]" class="form-control"
                            cols="30" rows="10"></textarea>
                    </div>

                    <div class="form-group">
                        <label>Map Image URL</label>
                        <input type="text" class="form-control"
                            name="blog[walkImage]">
                    </div>
                    <div class="form-group">
                        <label>Walk Distance</label>
                        <input type="text" class="form-control"
                            name="blog[walkDistance]">
                    </div>
                    <div class="form-group">
                        <label>Walk Steps</label>
                        <input type="text" class="form-control"
                            name="blog[walkSteps]">
                    </div>
                    <div class="form-group">
                        <label>Walk Time</label>
                        <input type="text" class="form-control"
                            name="blog[walkTime]">
                    </div>
                    <div class="d-flex justify-content-center">
                        <input class="btn btn-primary mb-5" type="submit" value="Submit">
                    </div>
                </form>
            </div>
            <div class="col-md-2"></div>
        </div>
        <br>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.js"
        integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
        crossorigin="anonymous"></script>
    <script
        src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script
        src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>
</body>

</html>