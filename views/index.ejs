<%- include ('partials/header') %>


<div class="container">
    <div class="row ">
        <div class="col-lg-8  col-sm-12 p-3 rounded-sm">
            <h3>Latest Episodes</h3>

            <% blogs.reverse().slice(0,3).forEach(function(blog){ %>

            <a href="/episodes/<%=blog._id %>"
                class="text-reset text-decoration-none">
                <div class="shadow-sm card mb-3 p-md-2 "
                    style="max-width: 100%;">
                    <div class="row no-gutters">
                        <div class=" img-container col-5 col-lg-4 ">
                            <img src="<%=blog.image%>"
                                class="card-img p-2 p-md-1" alt="...">
                        </div>
                        <div class="col-7 col-lg-8">
                            <div class="card-body pl-0 pl-md-2 pb-1 py-md-1">
                                <h5 class="card-title episode-title mb-0">
                                    Episode <%=blog.episodeNum%></h5>
                                <p class="card-text mb-0"><%=blog.title%></p>
                                <p class="card-date">
                                    <%=(blog.created.getMonth()+1) + '/' + blog.created.getDate() + '/' + blog.created.getFullYear()%>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </a>

            <%}); %>
        </div>



        <div class="col-lg-4 col-lg-4 col-sm-12 p-3">
            <h3>Featured Walks</h3>


            <div class="card mb-3 shadow-sm ">
                <div class="row no-gutters p-0 ">
                    <div id="carouselExampleControls" class="carousel slide"
                        data-ride="carousel">
                        <div class="carousel-inner ">
                            <div class="carousel-item active">
                                <div class="p-2" style="width: 100%;">
                                
                                    <img src="<%=blogs[0].walkImage%>" class="card-img-top" alt="...">
                                    <div class="card-body card-text p-2">
                                        
                                        <ul>
                                            <li>Distance: <%=blogs[0].walkDistance%></li>
                                            <li>Steps: <%=blogs[0].walkSteps%></li>
                                            <li>Time: <%=blogs[0].walkTime%></li>
                                        </ul>
                                        
                                    </div>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <div class=" p-2 " style="width: 100%;">
                                    <img src="<%=blogs[0].walkImage%>" class="card-img-top" alt="...">
                                    <div class="card-body card-text p-2">
                                        
                                        <ul>
                                            <li>Distance: <%=blogs[0].walkDistance%></li>
                                            <li>Steps: <%=blogs[0].walkSteps%></li>
                                            <li>Time: <%=blogs[0].walkTime%></li>
                                        </ul>
                                        
                                    </div>
                                </div>
                            </div>
                            </div>
                            

                        </div>
                        <a class="carousel-control-prev"
                            href="#carouselExampleControls" role="button"
                            data-slide="prev">
                            <span class="carousel-control-prev-icon"
                                aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next"
                            href="#carouselExampleControls" role="button"
                            data-slide="next">
                            <span class="carousel-control-next-icon"
                                aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    
                </div>
                <h3>Gear</h3>
            <a href="#" class="text-reset text-decoration-none">
                <div class="card p-2 p-md-3 shadow-sm" style="width: 100%;">
                    <img src="images/gear.jpg" class="card-img-top" alt="...">
                    <div class="card-body p-0 pt-2">
                        <h5 class="card-title">Podwalker Gear List</h5>
                        <ul>
                            <li>Shoes: Hoka One One</li>
                            <li>Phone: Apple 11 Max</li>
                            <li>Ear buds: Jaba</li>
                            <li>Podcast manager: Pod Cruncher</li>
                            <li>Cameras: Go Pro, Iphone, Sony A6000</li>
                        </ul>
                    </div>
                </div>
            </a>
            </div>
            



        </div>
    </div>
</div>

