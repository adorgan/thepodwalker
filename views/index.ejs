<%- include ('partials/header') %>


<div class="container">
    <div class="row ">
        <div class="col-lg-8  col-sm-12 p-3 rounded-sm">
            <h3>Latest Episodes</h3>
           
            <% blogs.reverse().slice(0,3).forEach(function(blog){ %>
                
            <a href="/episodes/<%=blog._id %>"
                class="text-reset text-decoration-none">
                <div class="shadow-sm card mb-3 p-md-2 "
                    style="max-width: 100%;">
                    <div class="row no-gutters">
                        <div
                            class=" img-container col-5 col-lg-4 d-flex align-items-center">
                            <img src="<%=blog.image%>" class="card-img"
                                alt="...">
                        </div>
                        <div class="col-7 col-lg-8">
                            <div class="card-body pb-1 py-md-1">
                                <h5 class="card-title episode-title mb-0">
                                    Episode <%=blog.episodeNum%></h5>
                                <p class="card-text mb-0"><%=blog.title%></p>
                                <p class="card-date"><%=(blog.created.getMonth()+1) + '/' + blog.created.getDate() + '/' + blog.created.getFullYear()%>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
            
            <%}); %>
        </div>



        <div class="col-lg-4 col-md-4 col-sm-12 p-3">
            <h3>Today's Walk</h3>


            <div class="card mb-3 shadow-sm">
                <div class="row no-gutters p-3 ">
                    <div id="carouselExampleControls" class="carousel slide"
                        data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="/images/about.jpg" class="d-block w-100"
                                    alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="pod2.jpg" class="d-block w-100"
                                    alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="pod3.jpg" class="d-block w-100"
                                    alt="...">
                            </div>

                        </div>
                        <a class="carousel-control-prev"
                            href="#carouselExampleControls" role="button"
                            data-slide="prev">
                            <span class="carousel-control-prev-icon"
                                aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next"
                            href="#carouselExampleControls" role="button"
                            data-slide="next">
                            <span class="carousel-control-next-icon"
                                aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <div class="col-md-12">
                        <div class="card-body">
                            <h6 class="card-title">Location: Amalfi
                                Coast</h6>
                            <p class="card-text">This is a short
                                description of today's walk.</p>
                            <p class="card-subtitle">Time: 4:53</p>
                            <p class="card-subtitle">Distance: 6 miles
                            </p>
                            <p class="card-subtitle">Map: click here</p>
                        </div>
                    </div>
                </div>
            </div>
            <h3>Gear</h3>
            <a href="#" class="text-reset text-decoration-none">
                <div class="card p-3 shadow-sm" style="width: 100%;">
                    <img src="gear.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Podwalker Gear List</h5>
                        <p class="card-text">Some quick example text to
                            build on
                            the card title and make up the bulk of the
                            card's
                            content.</p>
                    </div>
                </div>
            </a>

            
            
        </div>
    </div>
</div>

