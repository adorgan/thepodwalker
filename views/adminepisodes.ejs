    <body>

        <div class="container d-flex justify-content-center">
        <form id="delete" method="GET" action="/admin/episodes/new">
            <button class="btn btn-primary">Add New BLog</button>
        </form>
    </div>

<div id="admin-episodes" class="container">
    <div class="row justify-content-center">
        <div class="col-8 p-3 rounded-sm">
            <h3>Episodes</h3>
            <% blogs.reverse().forEach(function(blog){ %>
                
            <!-- <a href="/admin/episodes/<%=blog._id %>" -->
                <class="text-reset text-decoration-none">
                <div class="shadow-sm card mb-3 p-md-2 "
                    style="max-width: 100%;">
                    <div class="row no-gutters">
                        <div
                            class=" img-container col-3 d-flex align-items-center">
                            <img src="<%=blog.image%>" class="card-img"
                                alt="...">
                        </div>
                        <div class="col-5 ">
                            <div class="card-body pb-1 py-md-1">
                                <h5 class="card-title episode-title mb-0">
                                    Episode <%=blog.episodeNum%></h5>
                                <p class="card-text mb-0"><%=blog.title%></p>
                                <p class=" card-text"><small
                                        class="text-muted"><%=(blog.created.getMonth()+1) + '/' + blog.created.getDate() + '/' + blog.created.getFullYear()%></small>
                                </p>
                                
                                
                            </div>
                        </div>
                        <div
                            class=" col-3 align-items-center">
                                <form action="/admin/episodes/<%=blog._id%>/edit">
                                    <button class = "btn btn-warning mb-2" type="submit">Edit</button>
                                </form>
                                
                                <form id="delete" method="POST" action="/admin/episodes/<%=blog._id%>?_method=DELETE">
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                        </div>
                    </div>
                </div>
            <!-- </a> -->
            <%}); %>
        </div>
    </div>
</div>

