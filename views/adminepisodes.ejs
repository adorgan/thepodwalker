<!DOCTYPE html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>The Pod Walker</title>
    <meta name="description" content="Admin Episode Page">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="/images/favicon.ico" type="image/png">
    <link
        href="https://fonts.googleapis.com/css?family=Oxygen:400,700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet"
        href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
        crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/cd776babcb.js"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
</head>

<body>
<!-- Main admin content - list of all episodes -->
    <div class="container d-flex justify-content-center">
        <form id="delete" method="GET" action="/admin/episodes/new">
            <button class="btn btn-primary">Add New BLog</button>
        </form>
    </div>
    <div id="admin-episodes" class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 p-3 rounded-sm">
                <h3>Episodes</h3>
                <% blogs.reverse().forEach(function(blog){ %>
                    <a id="episode<%=blog.episodeNum%>" href="/episodes/<%=blog._id %>"
                        class="text-reset text-decoration-none">
                        <div class="shadow-sm card mb-3 p-md-2 "
                            style="max-width: 100%;">
                            <div class="row no-gutters p-1 p-md-0">
                                
                                <div class=" img-container col-4 col-lg-4 ">
                                   
                                    <% if (Array.isArray(blog.image)) { %>
                                        <img src="<%=blog.image[0]%>"
                                        <%} else { %>
                                        <img src="<%=blog.image%>"
                                        <% } %>
                                    
                                        class="card-img p-2 p-md-1" alt="Main episode image">
                                </div>
                              
                                <div class="col-8 col-lg-8">
                                    <div class="card-body pr-0 pl-0 pl-md-2 pb-1 py-md-1">
                                        <h5 class="card-title episode-title mb-0">
                                            <%=blog.episodeNum%></h5>
                                        <p class="card-text mb-0"><%=blog.title%></p>
                                        <p class="card-date d-none d-sm-block">
                                            <%=(blog.created.getMonth()+1) + '/' + blog.created.getDate() + '/' + blog.created.getFullYear()%>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                    <%}); %>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.js"
        integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
        crossorigin="anonymous"></script>
    <script
        src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script
        src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>
</body>

</html>