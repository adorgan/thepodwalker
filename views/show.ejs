<%- include ('partials/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-8 p-3">
            <h5><span class="episode-number">Episode <%=blog.episodeNum%></span></h5>
            <h2 class="my-3"><%=blog.title%></h2>
            <h6>By <a href="/about">Tim Dorgan</a> | <%=(blog.created.getMonth()+1) + '/' + blog.created.getDate() + '/' + blog.created.getFullYear()%></h6>
            
            <img src="<%=blog.image%>" class="card-img py-3" alt="...">
            <p class="mb-0"><%-blog.body%></p>
        </div>
        <div class="col-lg-4 p-3">
            <div class="mb-3 ">
                <%-blog.playlist%>
            </div>

            <h3>Today's Walk</h3>
            
            <div class="mb-3 shadow-sm">
                <div class="card p-2 " style="width: 100%;">
                    <img src="<%=blog.walkImage%>" class="card-img-top" alt="...">
                    <div class="card-body card-text p-2">
                        
                        <ul>
                            <li>Distance: <%=blog.walkDistance%></li>
                            <li>Steps: <%=blog.walkSteps%></li>
                            <li>Time: <%=blog.walkTime%></li>
                        </ul>
                        
                    </div>
                </div>
        </div>
        
    </div>
</div>



